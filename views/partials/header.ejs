                            <a href="" class="nav-link">Welcome <%= user.email %></a>
                            </li>
                            <li class="nav-item">
                                <a href="/users/logout" class="nav-link">Logout</a>
                            </li>
                        <% }else{ %>
                            <li class="nav-item">
                                <a href="/users/signup" class="nav-link">Signup</a>
                            </li>
